# ~/.zshrc

alias ls="exa --icons"
alias cat="bat --style=auto"
alias top="ytop"

eval "$(zoxide init zsh)"

alias deploy='git switch main && git pull origin main && git push heroku main --no-verify'
alias sdeploy='git switch release && git pull origin release && git push staging release:main --no-verify'

alias merge='merge --no-edit'
alias gs='git status'
alias gcm='git commit -m'
alias gps='git push'
alias gpl='git pull'
alias ga='git add -A'
alias gap='git add -p'
alias gd='git diff'
alias gb='git b'
